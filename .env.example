# Fulmine-Spark Environment Configuration

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
SERVICE_ENV=development

# Replicate API Configuration
# Get your API key from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=your_replicate_api_key_here

# BTCPay Server Configuration
# Get these from your BTCPay Server instance
BTCPAY_SERVER_URL=http://your-btcpay-server:23000
BTCPAY_API_KEY=your_btcpay_api_key_here
BTCPAY_STORE_ID=your_store_id_here

# Image Generation Models
STABLE_DIFFUSION_MODEL=stability-ai/stable-diffusion
STABLE_DIFFUSION_XL_MODEL=stability-ai/stable-diffusion-xl
DALLE_MODEL=openai/dall-e-3

# Pricing Configuration (in BTC)
STABLE_DIFFUSION_PRICE=0.00001
STABLE_DIFFUSION_XL_PRICE=0.00002
DALLE_PRICE=0.00005

# Moderation Configuration
MODERATION_ENABLED=true
MODERATION_THRESHOLD=0.5

# Image Generation Configuration
IMAGE_WIDTH=512
IMAGE_HEIGHT=512
NUM_INFERENCE_STEPS=50
GUIDANCE_SCALE=7.5
